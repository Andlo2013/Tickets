@{
    Layout = null;
    string controlador = ViewContext.RouteData.Values["Controller"].ToString().ToLower();
    _Entidades.Usuario user = new _Entidades.specificModels.usuarioCRUD()._getUsuario();
}
<!DOCTYPE html>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Solinteg</title>
    
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" href="~/Content/jquery-ui.css" />
    <link rel="stylesheet" href="~/Content/appStyle.css" />
    @RenderSection("styles", required: false)

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Solinteg", "Index", "Home", new { Area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    
                    @if (user != null)
                    {
                        if (user.Tipo == 1)
                        {
                            <li> @Html.ActionLink("Tickets", "Index", "si_Ticket", new { Area = "supportSI" }, new { }) </li>
                            <li>@Html.ActionLink("Empresas", "Index", "si_Empresa", new { Area = "supportSI" }, new { })</li>
                            <li>@Html.ActionLink("Contratos", "Index", "si_Contrato", new { Area = "supportSI" }, new { })</li>
                            <li>@Html.ActionLink("Usuarios", "Index", "si_Usuario", new { Area = "supportSI" }, new { })</li>
                            <li>@Html.ActionLink("Planes", "Index", "si_Plan", new { Area = "supportSI" }, new { })</li>
                        }
                        else if (user.Tipo == 2)
                        {
                           <li> @Html.ActionLink("Soporte", "Index", "Soporte", new { Area = "Cliente" }, new { }) </li>
                        }
                    }
                </ul>
                @if (user!=null)
                {
                    <ul class="nav navbar-nav navbar-right">
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                                @user.Nombre <span class="caret"></span>
                            </a>
                            <ul class="dropdown-menu">
                                <li>@Html.ActionLink("Salir", "Logout", "Authenticate", new { Area = "" }, new { })</li>
                            </ul>
                        </li>
                    </ul>
                }
                else
                {
                    <ul class="nav navbar-nav navbar-right">
                        <li>@Html.ActionLink("Iniciar Sesión", "Login", "Authenticate", new { Area = "" }, new { })</li>
                    </ul>
                }
                        
            </div>
        </div>
    </div>
    <div class="container-full miclass body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Mi aplicación ASP.NET</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <script type="text/javascript" src="~/Scripts/_01basico.js"></script>
    
    <script src="http://code.jquery.com/ui/1.10.1/jquery-ui.js"></script>
    <!-- Include one of jTable styles. -->
    <link href="~/Scripts/jtable/themes/lightcolor/blue/jtable.css" rel="stylesheet" type="text/css" />
    <!-- Include jTable script file. -->
    <script src="~/Scripts/jtable/jquery.jtable.js" type="text/javascript"></script>
    <script src="~/Scripts/_02jtEspanol.js"></script>

    @RenderSection("scripts", required: false)
</body>
</html>
