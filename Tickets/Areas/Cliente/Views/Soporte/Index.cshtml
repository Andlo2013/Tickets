@model IEnumerable<_Entidades.specificModels.TicketsModel>

@{
    ViewBag.Title = "Index";
}

@section styles {
    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" integrity="sha384-1q8mTJOASx8j1Au+a5WDVnPi2lkFfwwEAa8hDDdjZlpLegxhjVME1fgjWPGmkzs7" crossorigin="anonymous">
    <link rel="stylesheet" href="~/Content/fileupload.css" />
    <link rel="stylesheet" href="~/Content/fileupload-ui.css" />
}

<h2>Tickets</h2>

@Html.Partial("~/Views/_common/_showErrors.cshtml")

<div class="panel panel-primary datosPlan">
    <div class="panel-heading">Datos del plan</div>
    <div class="panel-body">
        <div class="row">
            <div class="col-sm-2 subtittle">Empresa:</div>
            <div class="col-sm-3">@ViewBag.Empresa</div>
            <div class="col-sm-2 col-md-offset-2 subtittle">Inicia:</div>
            <div class="col-sm-3">@ViewBag.Inicia</div>
        </div>
        <div class="row">
            <div class="col-sm-2 subtittle">Plan:</div>
            <div class="col-sm-3">@ViewBag.Plan</div>
            <div class="col-sm-2 col-md-offset-2 subtittle">Termina:</div>
            <div class="col-sm-3">@ViewBag.Termina</div>
        </div>
        <div class="row">
            <div class="col-sm-2 subtittle">Minutos UTI:</div>
            <div class="col-sm-3">@ViewBag.MinutosUTI</div>
            <div class="col-sm-2 col-md-offset-2 subtittle">Minutos Plan:</div>
            <div class="col-sm-3">@ViewBag.Minutos</div>
        </div>
    </div>
</div>
    
<div id="SoporteTable"></div>

<div class="panel panel-default">
    <div class="panel-heading">Filtrado por:</div>
    <div class="panel-body">
        <form>
            <div class="row">
                <div class="col-md-1">
                    <label class="control-label">Número:</label>
                </div>
                <div class="col-md-1">
                    <input class="form-control" type="number" name="ticketnumero" id="ticketnumero" />
                </div>
                <div class="col-md-1">
                    <label class="control-label">Estado:</label>
                    </div>
                <div class="col-md-2">
                    <select class="form-control" id="ticketestado" name="ticketestado">
                        @foreach (_Entidades.Combo opcion in ViewBag.cmbEstado)
                        {
                            <option value="@opcion.Valor.ToString()">@opcion.Descripcion</option>
                        }
                    </select>
                </div>
                    <button type="submit" id="buscar" class="btn btn-default">Filtrar</button>
                </div>
        </form>
    </div>
</div>

@section Scripts {

    <script src="~/Scripts/_jtSoporte.js" type="text/javascript"></script>

    <!-- The jQuery UI widget factory, can be omitted if jQuery UI is already included -->
    <script src="~/js/vendor/jquery.ui.widget.js"></script>
    <!-- The basic File Upload plugin -->
    <script src="~/js/jquery.fileupload.js"></script>
    <!-- The File Upload processing plugin -->
    <script src="~/js/jquery.fileupload-process.js"></script>
    <script src="~/js/jquery.fileupload-validate.js"></script>
    <script src="~/js/_loadFunction.js"></script>
}
