@model IEnumerable<_Entidades.Ticket>

@{
    ViewBag.Title = "Index";
}

@section styles {
    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" integrity="sha384-1q8mTJOASx8j1Au+a5WDVnPi2lkFfwwEAa8hDDdjZlpLegxhjVME1fgjWPGmkzs7" crossorigin="anonymous">
    <link rel="stylesheet" href="~/Content/fileupload.css" />
    <link rel="stylesheet" href="~/Content/fileupload-ui.css" />
}

<h2>Tickets</h2>


@Html.Partial("~/Views/_common/_showErrors.cshtml")


<div class="panel panel-default">
    <div class="panel-heading">Filtrado por:</div>
    <div class="panel-body">
        <form>
            <div class="container-fluid">

                <div class="row marginRow">

                    <label class="col-md-1">Número:</label>
                    <div class="col-md-1">
                        <input class="form-control" type="number" name="ticketnumero" id="ticketnumero" />
                    </div>

                    <label class="col-md-1 col-sm-offset-1">Estado:</label>
                    <div class="col-md-2">
                        <select class="form-control" id="ticketestado" name="ticketestado">
                            @foreach (_Entidades.Combo opcion in ViewBag.cmbEstado)
                        {
                                <option value="@opcion.Valor.ToString()">@opcion.Descripcion</option>
                        }
                        </select>
                    </div>

                </div>

                <div class="row marginRow">

                    <label class="col-md-1">Empresa:</label>
                    <div class="col-md-2">
                        <input class="form-control" type="text" name="ticketempresa" id="ticketempresa" />
                    </div>

                    <label class="col-md-1">Prioridad:</label>
                    <div class="col-md-2">
                        <select class="form-control" id="ticketprioridad" name="ticketprioridad">
                        @foreach (_Entidades.Combo opcion in ViewBag.cmbPrioridad)
                        {
                            <option value="@opcion.Valor.ToString()">@opcion.Descripcion</option>
                        }
                        </select>
                    </div>

                </div>

                <div class="row marginRow">
                    <div class="col-md-1 col-md-offset-4">
                        <button class="form-control btn btn-default" id="limpiar">Limpiar</button>
                    </div>

                    <div class="col-md-1">
                        <button class="form-control btn btn-default" type="submit" id="buscar">Buscar</button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

<div id="SoporteTable"></div>


@section Scripts {

    <script src="~/Scripts/_jtSoporte_SI.js" type="text/javascript"></script>

    <!-- The jQuery UI widget factory, can be omitted if jQuery UI is already included -->
    <script src="~/js/vendor/jquery.ui.widget.js"></script>
    <!-- The basic File Upload plugin -->
    <script src="~/js/jquery.fileupload.js"></script>
    <!-- The File Upload processing plugin -->
    <script src="~/js/jquery.fileupload-process.js"></script>
    <script src="~/js/jquery.fileupload-validate.js"></script>
    <script src="~/js/_loadFunction.js"></script>

}
